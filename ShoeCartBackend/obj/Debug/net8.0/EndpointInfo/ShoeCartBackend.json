    "/api/Auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": [
                  "Email",
                  "Name",
                  "Password"
                ],
                "type": "object",
                "properties": {
                  "Name": {
                    "maxLength": 50,
                    "pattern": "^[A-Z][a-zA-Z\\s]*$",
                    "type": "string"
                  },
                  "Email": {
                    "maxLength": 150,
                    "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$",
                    "type": "string",
                    "format": "email"
                  },
                  "Password": {
                    "maxLength": 50,
                    "minLength": 8,
                    "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&]).{8,}$",
                    "type": "string"
                  }
                }
              },
              "encoding": {
                "Name": {
                  "style": "form"
                },
                "Email": {
                  "style": "form"
                },
                "Password": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
